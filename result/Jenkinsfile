pipeline {
	agent none
	
	stages {
		stage('build'){
			agent {
				docker {
					image 'node:12-slim'
				}
			}
			when {
				changeset '**/result/**'
			}
			steps {
				echo 'Building NodeJS Result APP'
				dir('result'){
					sh 'npm install'
				}
			}
		}

		stage('test'){
			agent {
				docker {
					image 'node:12-slim'
				}
			}
			when {
				changeset '**/result/**'
			}
			steps {
				echo 'Unit Testing for NodeJS APP'
				dir('result'){
					sh 'npm install'
					sh 'npm run test'
				}
			}
		}

		stage('package'){
			agent any
			when {
				changeset '**/result/**'
				branch 'master'
			}
			steps {
				echo 'Packaging app with Docker Image Build'
				script {
					docker.build("result:v${env.BUILD_ID}")
				}
			}
		}
	}
} 
