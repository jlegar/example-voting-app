pipeline {
	agent {
		docker {
			image 'node:12-slim'
		}
	}
	
	stages {
		stage('build'){
			when {
				changeset '**/result/**'
			}
			steps {
				echo 'Building NodeJS Result APP'
				dir('result'){
					sh 'npm install'
				}
			}
		}

		stage('test'){
			when {
				changeset '**/result/**'
			}
			steps {
				echo 'Unit Testing for NodeJS APP'
				dir('result'){
					sh 'npm install'
					sh 'npm run test'
				}
			}
		}
	}
} 
